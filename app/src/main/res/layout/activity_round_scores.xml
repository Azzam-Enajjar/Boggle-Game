<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.boggle.scoreBoard"
    android:background="@drawable/white">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tlRoundScores"
        android:textAlignment="center">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:textAlignment="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Round Number"
                android:id="@+id/tvRNlabel"
                android:textColor="#ffbcaa0d"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_body_1_material"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="  "
                android:id="@+id/tvBlank" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Score"
                android:id="@+id/tvRSlabel"
                android:textStyle="bold"
                android:textColor="#ffbcaa0d"
                android:textSize="@dimen/abc_text_size_body_1_material"
                />
        </TableRow>

    </TableLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignBottom="@+id/tlRoundScores">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginBottom="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Next Round"
            android:id="@+id/btnNextRound"
            android:clickable="true"
            android:background="@drawable/blue"
            android:textColor="#f4fbfd24"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_body_1_material" />


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:layout_centerHorizontal="true"
            android:text="Quit"
            android:id="@+id/btnQuit"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:background="@drawable/blue"
            android:textColor="#f4fbfd24"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_body_1_material" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:layout_centerHorizontal="true"
            android:text="OK"
            android:id="@+id/btnOK"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:background="@drawable/blue"
            android:textColor="#f4fbfd24"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_body_1_material" />
    </RelativeLayout>
</RelativeLayout>