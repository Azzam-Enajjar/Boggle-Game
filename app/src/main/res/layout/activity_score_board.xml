<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.boggle.scoreBoard"
    android:background="@drawable/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#fffffffb"
        android:textStyle="bold"
        android:background="@drawable/scoretext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textScore"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:textColor="#ffbcaa0d" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textWord1"
        android:textColor="#fffffffb"
        android:layout_below="@+id/textScore"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="@drawable/correctwords" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textWord"
        android:textColor="#ffbcaa0d"
        android:width="200dp"
        android:height="100dp"
        android:maxHeight="100dp"
        android:enabled="false"
        android:visibility="visible"
        android:backgroundTint="#fff3ffa8"
        android:background="#07000000"
        android:layout_below="@+id/textWord1"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textGrid"
        android:textColor="#fffffffb"
        android:layout_below="@+id/textWord"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="@drawable/wordspossible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDict"
        android:textColor="#ffbcaa0d"
        android:width="200dp"
        android:height="100dp"
        android:maxHeight="100dp"
        android:visibility="visible"
        android:backgroundTint="#fff3ffa8"
        android:background="#07000000"
        android:layout_below="@+id/textGrid"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textRounds"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff5986ff" />

    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="OK"
        android:id="@+id/btnOK"
        android:layout_above="@+id/textRounds"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"
        android:background="@drawable/blue"
        android:textColor="#f4fbfd24"
        android:textSize="@dimen/abc_text_size_body_1_material" />

</RelativeLayout>
