



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/rubbish"
        android:focusable="true">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/button_back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/back" />


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button_help"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/help" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button_ok"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:background="@drawable/ok"
            android:textColor="#ff000000"
            android:visibility="invisible" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/texthelp"
            android:textColor="#ea4c8ed5"
            android:textStyle="bold" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
            android:id="@+id/RL_Menu1">

            <TextView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tv_welcome"
                android:layout_marginTop="89dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="visible"
                android:background="@drawable/maintext"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:id="@+id/botton_sp"
                android:layout_marginBottom="30dp"
                android:layout_above="@+id/botton_mp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/blue"
                android:textColor="#f4fbfd24"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_body_1_material" />

            <Button
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:id="@+id/botton_mp"
                android:layout_marginBottom="100dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/blue"
                android:textColor="#f4fbfd24"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_body_1_material" />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
            android:id="@+id/RL_Menu2">

            <Button
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:id="@+id/botton_easy"
                android:layout_marginBottom="30dp"
                android:layout_above="@+id/botton_hard"
                android:layout_centerHorizontal="true"
                android:background="@drawable/easy"
                android:textColor="#f4fbfd24"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_body_1_material" />

            <Button
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:id="@+id/botton_hard"
                android:layout_marginBottom="100dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/hard"
                android:textColor="#f4fbfd24"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_body_1_material" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="How do you wanna play??"
                android:id="@+id/tv_level"
                android:layout_marginBottom="30dp"
                android:layout_above="@+id/botton_easy"
                android:layout_centerHorizontal="true"
                android:visibility="visible"
                android:textStyle="bold"

                android:textSize="25dp"
                android:textColor="#eaffba42" />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
            android:id="@+id/RL_Menu3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tv_round"
                android:layout_above="@+id/spinner_rounds"
                android:layout_marginBottom="60dp"
                android:layout_centerHorizontal="true"
                android:visibility="visible"
                android:textColor="#ea4c8ed5"
                android:textStyle="bold"
                android:textSize="35dp"
                android:textIsSelectable="false"
                android:text="Rounds??" />
            <Spinner
                android:id="@+id/spinner_rounds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d8cdcdcd"
                android:spinnerMode="dialog"
                android:layout_above="@+id/botton_roundsubmit"
                android:layout_marginBottom="100dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:popupBackground="#ff000000"
                android:theme="@android:style/TextAppearance.Holo" />

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/botton_roundsubmit"
                android:layout_marginBottom="80dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/submit"
                android:textColor="#f4fbfd24"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_body_1_material" />
        </RelativeLayout>


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
            android:id="@+id/RL_Play">


        </RelativeLayout>

    </RelativeLayout>