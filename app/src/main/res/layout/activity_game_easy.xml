<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.boggle.gameEasy"
    android:background="@drawable/rubbish">

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Boggle!"
        android:id="@+id/Boggle"
        android:layout_below="@+id/SolveButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonboggle"
        android:textColor="#f4fbfd24"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Solutions"
        android:id="@+id/SolveButton"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/button1"
        android:singleLine="false"
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:backgroundTintMode="src_in"
        android:background="@drawable/buttonnoselectborder"
        android:textStyle="bold"
        android:textColor="#fffdff0b"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_below="@+id/textViewShake"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <Button
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/button2"
        android:singleLine="false"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/button1"
        android:background="@drawable/buttonnoselectborder"
        android:textColor="#fffdff0b"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:textStyle="bold" />

    <Button
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/button3"
        android:singleLine="false"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:background="@drawable/buttonnoselectborder"
        android:textColor="#fffdff0b"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_display_1_material" />

    <Button
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/button4"
        android:singleLine="false"
        android:layout_below="@+id/button1"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:background="@drawable/buttonnoselectborder"
        android:textColor="#fffdff0b"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:textStyle="bold" />

    <Button
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/button5"
        android:singleLine="false"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:background="@drawable/buttonnoselectborder"
        android:textColor="#fffdff0b"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:textStyle="bold" />

    <Button
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/button6"
        android:singleLine="false"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5"
        android:background="@drawable/buttonnoselectborder"
        android:textColor="#fffdff0b"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:textStyle="bold" />

    <Button
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/button7"
        android:singleLine="false"
        android:layout_alignTop="@+id/button8"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button2"
        android:background="@drawable/buttonnoselectborder"
        android:textColor="#fffdff0b"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_display_1_material" />

    <Button
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/button8"
        android:singleLine="false"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:background="@drawable/buttonnoselectborder"
        android:textColor="#fffdff0b"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_display_1_material" />

    <Button
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/button9"
        android:singleLine="false"
        android:layout_alignTop="@+id/button8"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:background="@drawable/buttonnoselectborder"
        android:textColor="#fffdff0b"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:textStyle="bold" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/Entry"
        android:layout_below="@+id/button8"
        android:textColor="#ffbcaa0d"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:typeface="monospace"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:layout_alignParentBottom="true"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Submit"
        android:id="@+id/submitButton"
        android:clickable="true"
        android:textColor="#f4fbfd24"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:background="@drawable/buttonboggle"
        android:layout_below="@+id/button7"
        android:layout_toLeftOf="@+id/button8"
        android:layout_toStartOf="@+id/button8" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewShake"
        android:background="@drawable/shakeit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_alignRight="@+id/textViewShake"
        android:layout_alignEnd="@+id/textViewShake"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textColor="#e0e0e0e0" />
</RelativeLayout>
